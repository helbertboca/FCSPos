<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbConetionWifi"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/LlMenu"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TvMenuPrincipal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_logo_fcs"
                    android:textColor="@color/ic_launcher_background"
                    android:textSize="36sp" />

                <LinearLayout
                    android:id="@+id/LlRuta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TvRuta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ic_launcher_background" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="ELIJA UNA POSICION DE LA EDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Equipo A Posicion 1"
            android:id="@+id/btnPos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo A Posicion 2"
            android:id="@+id/btnPos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo B Posicion 1"
            android:id="@+id/btnPos3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Equipo B Posicion 2"
            android:id="@+id/btnPos4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>