<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.IdentificacionMethodFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="METODO DE IDENTIFICACION" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Identificarse por Placa"
            android:id="@+id/edtPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Ok"
            android:id="@+id/btnOkPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:text="I-button"
        android:id="@+id/btnIbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="RFID"
        android:id="@+id/btnRfid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Anillos"
        android:id="@+id/btnAnillos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Convenios"
        android:id="@+id/btnConvenios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>